{
  "name": "auto-header-ids",
  "displayName": "Auto Header IDs",
  "publisher": "Ravi S. Iyer",
  "description": "Adds ID attribute to HTML Header elements",
  "version": "0.0.2",
  "engines": {
    "vscode": "^1.103.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:auto-header-ids.addIds",
    "onCommand:auto-header-ids.markExistingIds",
    "onCommand:auto-header-ids.createTOC"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "auto-header-ids.addIds",
        "title": "Auto Header IDs: Add IDs to Headers"
      },
      {
        "command": "auto-header-ids.markExistingIds",
        "title": "Auto Header IDs: Mark Existing IDs as no-toc"
      },
      {
        "command": "auto-header-ids.createTOC",
        "title": "Auto Header IDs: Create Table of Contents"
      }
    ],
    "configuration": {
      "title": "Auto Header IDs Configuration",
      "properties": {
        "auto-header-ids.headersToProcess": {
          "type": "array",
          "default": [
            "1",
            "2"
          ],
          "items": {
            "type": "string",
            "enum": [
              "1",
              "2",
              "3",
              "4",
              "5",
              "6"
            ]
          },
          "description": "Specify which header elements (e.g., h1, h2) should have IDs added. Enter the numbers as strings in an array."
        }
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ravisiyer/html-auto-header-ids"
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.103.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "eslint": "^9.32.0",
    "typescript": "^5.9.2",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}
